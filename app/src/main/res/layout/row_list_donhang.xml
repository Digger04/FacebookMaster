<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/shape_edit_tanglike"
    android:gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:padding="0dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đơn: 1"
        android:textColor="#f00"
        android:textSize="10dp"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"
        android:id="@+id/madon"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/img_edit"/>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại giao dịch"
            android:textSize="20dp"
            android:textColor="#14B91C"
            android:textStyle="bold"
            android:id="@+id/loaigiaodich"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: "
            android:textSize="15dp"
            android:textColor="#E65A2E"
            android:id="@+id/soluong"/>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SDT: "
                android:id="@+id/sdt"
                android:textSize="15dp"
                android:textColor="#E71400"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản: "
                android:textSize="15dp"
                android:textColor="#E71400"
                android:layout_marginLeft="10dp"
                android:id="@+id/taikhoan"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link bài viết"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#2196F3"
                android:id="@+id/linkbaiviet"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_link_black_24dp"
                android:id="@+id/img_link"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền: "
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColor="#F33601"
            android:id="@+id/sotien"/>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: "
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="#F33601"
                android:layout_marginLeft="10dp"
                android:id="@+id/status"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảo hành: "
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/baohanh"
                android:textColor="#F33601"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian: "
            android:textSize="15dp"
            android:textColor="#f053"
            android:id="@+id/time"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú"
            android:id="@+id/ghichu"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:textColor="#f932"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiện tại: Đang check"
                android:textSize="15dp"
                android:textColor="#B84949"
                android:textStyle="italic"
                android:id="@+id/hientai"/>

            <TextView
                android:textColor="#B84949"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàn thành: Đang check"
                android:textStyle="italic"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/hoanthanh"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BẮT ĐẦU"
            android:textStyle="bold|italic"
            android:layout_marginBottom="5dp"
            android:textColor="#f00"
            android:id="@+id/batdau"
            android:background="@drawable/shape_button_2"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</FrameLayout>