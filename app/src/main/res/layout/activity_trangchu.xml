<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_home"
    tools:context=".Activity.trangchu">

       <androidx.drawerlayout.widget.DrawerLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/layout_full"
           android:orientation="vertical">

           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="#F8E42E"
                       android:orientation="horizontal">

                       <de.hdodenhof.circleimageview.CircleImageView
                           android:layout_marginLeft="5dp"
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_marginTop="2dp"
                           android:id="@+id/avata_toolbar"
                           android:src="@drawable/ic_account"/>

                       <FrameLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <androidx.appcompat.widget.Toolbar
                               android:layout_width="match_parent"
                               android:layout_height="?attr/actionBarSize"
                               android:background="#F8E42E"
                               app:titleTextColor="#BBE886"
                               android:id="@+id/toolbar"/>

                           <TextView
                               android:layout_width="300dp"
                               android:layout_height="50dp"
                               android:background="@drawable/shape_toolbar"
                               android:text="Dịch vụ facebook"
                               android:gravity="center"
                               android:layout_margin="3pt"
                               android:textSize="20dp"
                               android:textColor="#f00"/>

                       </FrameLayout>


                   </LinearLayout>

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="10pt"
                       app:cardCornerRadius="20dp">

                       <ViewFlipper
                           android:layout_width="match_parent"
                           android:layout_height="200dp"
                           android:id="@+id/viewfliper"
                           android:background="#BDEA88"/>

                   </androidx.cardview.widget.CardView>



                   <FrameLayout
                       android:layout_width="match_parent"
                       android:orientation="vertical"
                       android:layout_height="wrap_content">

                       <androidx.cardview.widget.CardView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="10pt"
                           android:layout_marginRight="10pt"
                           android:layout_marginBottom="10pt"
                           app:cardCornerRadius="20dp">


                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="480dp"
                               android:src="#FFFFFF"
                               android:layout_margin="5pt"
                               android:id="@+id/img_backgound"
                               android:scaleType="fitXY"/>

                           <LinearLayout
                               android:layout_gravity="center"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="5pt"
                               android:orientation="vertical">

                               <LinearLayout
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal">

                                   <LinearLayout
                                       android:onClick="click_like"
                                       android:background="@drawable/shape_bgr_like"
                                       android:layout_width="150dp"
                                       android:layout_height="210dp"
                                       android:orientation="vertical"
                                       android:gravity="center">

                                       <de.hdodenhof.circleimageview.CircleImageView
                                           android:layout_width="100dp"
                                           android:layout_height="100dp"
                                           android:src="@drawable/ic_like"
                                           android:id="@+id/like"/>

                                       <LinearLayout
                                           android:layout_marginTop="10pt"
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:orientation="vertical">

                                           <TextView
                                               android:gravity="center_horizontal"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:text="Tăng Like"
                                               android:textSize="20dp"
                                               android:textColor="#2E2D2D"/>

                                           <TextView
                                               android:gravity="center_horizontal"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:text="Giá"
                                               android:id="@+id/txt_gialike"
                                               android:textStyle="italic"
                                               android:textSize="15dp"
                                               android:textColor="#EB5454"/>

                                       </LinearLayout>
                                   </LinearLayout>

                                   <LinearLayout
                                       android:onClick="click_share"
                                       android:layout_marginLeft="10dp"
                                       android:padding="10dp"
                                       android:background="@drawable/shape_bgr_share"
                                       android:layout_width="150dp"
                                       android:layout_height="210dp"
                                       android:orientation="vertical"
                                       android:gravity="center">

                                       <de.hdodenhof.circleimageview.CircleImageView
                                           android:layout_width="100dp"
                                           android:layout_height="100dp"
                                           android:src="@drawable/ic_share"
                                           android:id="@+id/share"/>

                                       <LinearLayout
                                           android:layout_marginTop="5dp"
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:orientation="vertical">

                                           <TextView
                                               android:gravity="center_horizontal"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:text="Tăng Share"
                                               android:layout_marginTop="20dp"
                                               android:textSize="20dp"
                                               android:textColor="#2E2D2D"/>

                                           <TextView
                                               android:gravity="center_horizontal"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:text="Giá"
                                               android:id="@+id/txt_giashare"
                                               android:textStyle="italic"
                                               android:textSize="15dp"
                                               android:textColor="#EB5454"/>

                                       </LinearLayout>
                                   </LinearLayout>

                               </LinearLayout>

                               <LinearLayout
                                   android:layout_marginBottom="10dp"
                                   android:layout_gravity="center_horizontal"
                                   android:layout_marginTop="30dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal">


                                   <LinearLayout
                                       android:onClick="click_follow"
                                       android:padding="10dp"
                                       android:background="@drawable/shape_bgr_follow"
                                       android:layout_width="150dp"
                                       android:layout_height="210dp"
                                       android:orientation="vertical"
                                       android:gravity="center">

                                       <de.hdodenhof.circleimageview.CircleImageView
                                           android:layout_width="100dp"
                                           android:src="@drawable/ic_follow"
                                           android:layout_height="100dp"
                                           android:id="@+id/follow"/>

                                       <LinearLayout
                                           android:layout_marginTop="5dp"
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:orientation="vertical">

                                           <TextView
                                               android:gravity="center_horizontal"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:text="Tăng Follow"
                                               android:textSize="20dp"
                                               android:textColor="#2E2D2D"/>

                                           <TextView
                                               android:gravity="center_horizontal"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:text="Giá"
                                               android:id="@+id/txt_giafollow"
                                               android:textStyle="italic"
                                               android:textSize="15dp"
                                               android:textColor="#EB5454"/>

                                       </LinearLayout>
                                   </LinearLayout>

                                   <LinearLayout
                                       android:onClick="click_hotro"
                                       android:layout_marginLeft="10dp"
                                       android:padding="10dp"
                                       android:background="@drawable/shape_bgr_hotro"
                                       android:layout_width="150dp"
                                       android:layout_height="210dp"
                                       android:orientation="vertical"
                                       android:gravity="center">

                                       <de.hdodenhof.circleimageview.CircleImageView
                                           android:layout_width="100dp"
                                           android:layout_height="100dp"
                                           android:src="@drawable/ic_hotro"
                                           android:id="@+id/chat"/>

                                       <LinearLayout
                                           android:layout_marginTop="5dp"
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:orientation="vertical">

                                           <TextView
                                               android:gravity="center_horizontal"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:text="Hỗ trợ"
                                               android:textSize="20dp"
                                               android:textColor="#2E2D2D"/>

                                           <TextView
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:gravity="center_horizontal"
                                               android:text="Chat với admin"
                                               android:textStyle="italic"
                                               android:textColor="#EB5454"
                                               android:textSize="15dp"
                                               android:id="@+id/chat_admin"/>

                                       </LinearLayout>
                                   </LinearLayout>

                               </LinearLayout>

                           </LinearLayout>

                       </androidx.cardview.widget.CardView>

                   </FrameLayout>

               </LinearLayout>


           </ScrollView>
           <com.google.android.material.navigation.NavigationView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:background="#F8E42E"
               android:layout_gravity="start"
               android:id="@+id/navigationview">


               <ListView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/list_menu"/>

           </com.google.android.material.navigation.NavigationView>

       </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>