<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/shape_edit_sign"
    android:gravity="center"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bảng giá"
        android:textColor="#f00"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/title"/>

    <EditText
        android:textColor="#f00"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edit_sign"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:hint="Giá like"
        android:id="@+id/dialog_gialike"/>

    <EditText
        android:inputType="number"
        android:textColor="#f00"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edit_sign"
        android:hint="Giá share"
        android:layout_marginTop="10dp"
        android:id="@+id/dialog_giashre"/>

    <EditText
        android:inputType="number"
        android:textColor="#f00"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edit_sign"
        android:hint="Giá follow"
        android:layout_marginTop="10dp"
        android:id="@+id/dialog_follow"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="25dp"
            android:background="@drawable/shape_button_sign"
            android:layout_marginTop="10dp"
            android:textColor="#f00"
            android:id="@+id/dialog_ok"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textSize="25dp"
            android:background="@drawable/shape_button_sign"
            android:layout_marginTop="10dp"
            android:textColor="#f00"
            android:layout_marginLeft="10dp"
            android:id="@+id/dialog_huy"/>

    </LinearLayout>

</LinearLayout>